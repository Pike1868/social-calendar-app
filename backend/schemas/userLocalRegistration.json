{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 5
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    }
  },
  "additionalProperties": false,
  "required": ["password", "firstName", "lastName", "email"]
}

  